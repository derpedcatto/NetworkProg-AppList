<Window x:Class="NetworkProg_AppList._1_Client_Server.View.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NetworkProg_AppList._1_Client_Server.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Server"
        Width="400"
        Height="450"
        Closed="Window_Closed"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        >
    <DockPanel Margin="10,10"
               LastChildFill="True"
               >
        <Label HorizontalAlignment="Center"
               Content="Server Activity Log"
               DockPanel.Dock="Top"
               FontSize="36"
               FontWeight="DemiBold"
               />

        <Button x:Name="CloseServerButton"
                Click="CloseServerButton_Click"
                Content="Close Server"
                DockPanel.Dock="Bottom"
                FontSize="18"
                />

        <ScrollViewer DockPanel.Dock="Top"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Visible"
                      >
            <TextBlock x:Name="TextBlockLog"
                       FontSize="16"
                       />
        </ScrollViewer>
    </DockPanel>
</Window>
